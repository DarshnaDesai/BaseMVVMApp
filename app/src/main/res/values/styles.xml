    <style name="etMain" parent="medium_poppins_reg">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="btnMain" parent="medium_poppins_light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/green_button_ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="myTextStyle" parent="medium_poppins_reg">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="subLoginTextView" parent="reg_poppins_medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="toolbarTitle" parent="reg_poppins_medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="reg_light_input_layout" parent="@style/reg_poppins_medium">
        <item name="android:textColor">@color/grayLight</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="reg_light_input_edittext" parent="@style/reg_poppins_medium">
        <item name="android:theme">@style/poppins_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">@color/grayLight</item>
    </style>

    <style name="poppins_edit_text">
        <item name="colorControlNormal">@color/grayLight</item>
        <item name="colorControlActivated">@color/grayLight</item>
        <item name="colorControlHighlight">@color/grayLight</item>
    </style>

    <!--bottom sheet dialog-->
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="blackTitleText" parent="medium_poppins_semi_bold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="moreView">
        <item name="android:background">@color/grayLight</item>
        <item name="android:layout_marginLeft">@dimen/medium_padding</item>
        <item name="android:layout_marginRight">@dimen/medium_padding</item>
    </style>

