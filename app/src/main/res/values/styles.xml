<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/AppTheme.ItemTextStyle</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@color/light_green</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>


    <style name="AppTheme.ItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@style/medium_poppins_bold</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="poppins_bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="poppins_light">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="poppins_reg">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="poppins_semi_bold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="poppins_medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <!--style for poppins regular-->
    <style name="tiny_poppins_reg" parent="poppins_reg">
        <item name="android:textSize">@dimen/tiny</item>
    </style>

    <style name="small_poppins_reg" parent="poppins_reg">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="medium_poppins_reg" parent="poppins_reg">
